    <div class="search-table-outter wrapper" id="Tablediv">
        <p><b>Please select the kits to reset to ship status.</b></p>
        <table class="table table-striped" id="Table">
            <thead>
                <tr>
                    <th></th>
                    <th>Kit Key</th>
                    <th>Kit Number</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.ShipIP.Count(); i++)
                {
                    <tr>
                        <td></td>
                        <td>@Model.ShipIP[i].KITKEY</td>
                        <td>@Model.ShipIP[i].KitNumber</td>
                        <td>@Model.ShipIP[i].KITSTAT</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
