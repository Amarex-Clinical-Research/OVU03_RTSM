<script>

    $(document).ready(function () {
        if ($('#countryInput').val() === 'United States') {
            // Show the state dropdown
            $('#stateInputContainer').show();
            $('#Statetext').hide();
            $('#stateOption').prop('required', true);
            $('#stateInput').prop('required', false);

        } else {
            // Hide the state dropdown if the country is not United States
            $('#stateInputContainer').hide();
            $('#Statetext').show();
            $('#stateInput').prop('required', true);
            $('#stateOption').prop('required', false);

        }

        $('#countryInput').on('change', function () {
            // Get the selected country value
            var selectedCountry = $(this).val();

            // Check if the selected country is United States
            if (selectedCountry === 'United States') {
                // Show the state dropdown
                $('#stateInputContainer').show();
                $('#Statetext').hide();
                $('#stateInput').val('');
                $('#stateOption').prop('required', true);
                $('#stateInput').prop('required', false);
            } else {
                // Hide the state dropdown if the country is not United States
                $('#stateInputContainer').hide();
                $('#Statetext').show();
                $('#stateOption').val('');
                $('#stateInput').prop('required', true);
                $('#stateOption').prop('required', false);
            }
        });
    });

</script>





