                        <div class="form-group">
                            <label>Email Address <span style="font-size: 13px;"> (Note: Type email address and press enter)</span><span style="color: red;"> *</span></label> <br />
                            @*<textarea asp-for="@Model.PIDet" name="email" class="CustomInput" style="width: 450px; padding: .375rem .75rem; height: 200px;"></textarea>*@
                            @*<input name="email" class="form-control flexdatalist" multiple='multiple' style="width: 450px;" type="email" required />*@
