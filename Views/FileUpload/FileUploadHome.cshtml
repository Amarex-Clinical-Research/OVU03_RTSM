                </div>
                <div class="modal-body">
                    <input type="text" id="UPLOAD_KEY" name="UPLOAD_KEY" Value="UPLOAD_KEY" class="form-control" readonly style="display:none" />
                    <input type="text" id="FILENAME" name="FILENAME" Value="FILENAME" class="form-control" readonly style="display:none" />
                    <input type="text" id="TYPEUL" name="TYPEUL" Value="TYPEUL" class="form-control" readonly style="display:none" />
