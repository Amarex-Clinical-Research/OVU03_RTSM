                            <input type="email" class="form-control flexdatalist" multiple='multiple' name="email" placeholder="example@example.com" style="width: 450px;" required />
                        </div>
                        <div class="form-group">
                            <label>Enter file password<span style="color: red;"> *</span></label>
                            <input name="code" class="CustomInput" value="" style="width: 450px;" required />
                        </div>
                        <label>Message<span style="color: red;"> *</span></label> <br />
                        <textarea asp-for="@Model.Comment" name="comment" class="CustomInput" style="width: 450px; padding: .375rem .75rem; height: 200px;" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Send" formaction="SendCode" class="btn" name="update" />

                    <button type="button" class="btn btn-default" data-dismiss="modal" style="background-color:#007bff;">Cancel</button>


                </div>
            </form>
        </div>
    </div>
</div>




