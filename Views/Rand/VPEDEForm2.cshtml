<script>
    function validateForm() {
        var isValid = true;

        // Check if the required fields are empty
        $(".form-group input[type='text']").each(function () {
            if ($(this).val() === "") {
                isValid = false;
                $(this).addClass("is-invalid");
            } else {
                $(this).removeClass("is-invalid");
            }
        });

        $(".form-group select").each(function () {
            if ($(this).val() === "") {
                isValid = false;
                $(this).addClass("is-invalid");
            } else {
                $(this).removeClass("is-invalid");
            }

            // Age group validation logic
            var selectedAgeGroup = $(this).val();
            var birthYearInput = $("#birthYearInput").val();

            // Calculate age based on the current year
            var currentYear = new Date().getFullYear();
            var age = currentYear - birthYearInput;

            // Validate age group
            if ((selectedAgeGroup === "Age<40" && age >= 40) ||
                (selectedAgeGroup === "40>=Age<=60" && (age < 40 || age > 60)) ||
                (selectedAgeGroup === "Age>60" && age <= 60)) {
                isValid = false;
                $(this).addClass("is-invalid");
                $("#ageError").show().text(" Age group is incorrect");
            }
            else {
                $("#ageError").hide();
            }
            var icdtDateStr = $("#datepicker").val();
            var ICDTDate = new Date(icdtDateStr);
            var SponsorDateStr = $("#datepicker1").val();
            var SponsorDate = new Date(SponsorDateStr);
            var currentDate = new Date();
            if (SponsorDate > currentDate) {
                isValid = false;
                $("#datepicker1").addClass("is-invalid");
                $("#Error").show().text(" Date cannot be in the future.");
            }
            else if (ICDTDate > SponsorDate) {
                isValid = false;
                $("#datepicker").addClass("is-invalid");
                $("#Error").show().text(" Date cannot precede Informed Consent Date.");
            }
            else {
                $("#datepicker").removeClass("is-invalid");
                $("#Error").hide();
            }
        });

        if (!isValid) {
            /*alert('Please fill in all required fields.');*/
            $("#Errormessage").show()
        }
        else {
            $("#Errormessage").hide()
        }
        return isValid;
    }
</script>


