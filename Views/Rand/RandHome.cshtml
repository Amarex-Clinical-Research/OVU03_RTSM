        @if (ViewBag.Rand == "Rand Disabled" || ViewBag.SiteRand == "Rand Disabled" || ViewBag.StopAt == "Stop")
        {

            <div style="color: red; display: inline;">Stop Randomization has been set. Contact the PM or CRA.</div>

        }
        else
        {
            @*<div style="color: red; display: inline;">Stop Randomization has been set. Contact the PM or CRA.</div>*@
        }
        <br />
        <table class="table table-striped" id="Table">
            <thead>
                <tr>
                    @*<th style="display: none;">ROW_KEY</th>*@
                    <th>Subject ID</th>
                    <th>Informed Consent Date</th>
                    @*<th>Screened Date</th>*@
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    @if (_httpContext.HttpContext.Session.Get("sesCenter") != null)
                    {
                        @if (chkAll.ToString() == "(All)")
                        {
                            @if (item.STATUS_INFO == "Screened")
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SUBJID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ICDTCstr)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.SCRNDTCstr)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.STATUS_INFO)
                                    </td>
                                    <td>
                                        @*<input type="submit" class="btn" value="Randomize" @disRand style="background-color: #e95420; color: white;" onclick="window.open('@Url.Action("VPEDEForm2","Rand", new {ROW_KEY = item.ROW_KEY})', '_parent')" />*@
