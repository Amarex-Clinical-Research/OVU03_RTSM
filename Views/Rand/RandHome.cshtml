                                            <input type="submit" class="btn" value="Randomize" @disRand style="background-color: #e95420; color: white;" onclick="window.open('@Url.Action("VPEDEForm2","Rand", new {ROW_KEY = item.ROW_KEY})', '_parent')" />

                                        }
                                        else
                                        {
                                            <input type="submit" class="btn" value="Randomize" style="background-color: #e95420; color: white; pointer-events: none; opacity: 0.6;" />
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            @if ((item.STATUS_INFO == "Screened") && (item.SITEID == _httpContext.HttpContext.Session.GetString("sesCenter").ToString()))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SUBJID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ICDTCstr)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.SCRNDTCstr)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.STATUS_INFO)
                                    </td>
                                    <td>
                                        @if (ViewBag.Rand == "Rand Enabled" && ViewBag.SiteRand == "Rand Enabled" && ViewBag.StopAt != "Stop")
