
@model SPModel

<head>

    <script>

        $(document).ready(function () {
            $('a[data-toggle="tab"]').on('show.bs.tab', function (e) {
                localStorage.setItem('studyTab', $(e.target).attr('href'));
            });
            var studyTab = localStorage.getItem('studyTab');
            if (studyTab) {
                $('#StudyTabs a[href="' + studyTab + '"]').tab('show');
            }
        });
    </script>
</head>


<script>
    $(document).ready(function() {
        var error =  @((TempData["ErrorMessage"] != null).ToString().ToLower());
        if (error == true) {
            $('#infoModal1').modal('show');
        }
});
</script>
<div class="modal fade" id="infoModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <p style="font-size:large; color: red">
                    <span class="icon-container">
                        <svg class="bi bi-exclamation-circle-fill text-danger" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                        </svg>
                    </span>
                    <b>@TempData["ErrorMessage"]</b>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" style="background-color:#007bff;">OK</button>
            </div>

        </div>
    </div>
</div>

<h1 style="color: #e95420;"> <i class="bi bi-truck" style="color:black;"></i>Supply Management: Supply Distribution </h1>
<p style="font-size: 14px">Protocol Name: @TempData.Peek("StudyName")</p>


<ul class="nav nav-tabs" id="StudyTabs">

    <li class="nav-item" style="font-weight:500;">
        <a class="nav-link active" data-toggle="tab" href="#invn">Supply IP</a>
    </li>

    <li class="nav-item" style="font-weight:500;">
        <a class="nav-link" data-toggle="tab" href="#sitekits">Site Inventory</a>
    </li>
    <li class="nav-item" style="font-weight:500;">
        <a class="nav-link" data-toggle="tab" href="#depotkits">Depot Inventory</a>
    </li>

</ul>
<div class="tab-content">
    <div id="invn" class="tab-pane fade show active">
        <br />

        <p> Select the Site and click the Supply IP button.</p>
        <form action="Update">

            <select name="SITEID" id="StudySelection" style="width: 350px; " required>
                <option value="" disabled selected>Please select a Site</option>
                @for (int i = 0; i < Model.Site.Count; i++)
                {
                    <option value="@Model.Site[i].SITEID">@Model.Site[i].SITEID</option>
                }
            </select>

            <select name="INVNAME" id="INVSelection" style="width: 350px; " required>
                <option value="" disabled selected>Please select Investigator</option>
                @for (int i = 0; i < Model.Site.Count; i++)
                {
                    <option value="@Model.Site[i].INVNAME">@Model.Site[i].INVNAME</option>
                }
            </select>
            <br />
            <br />
            <select name="shiptype" class="shiptype" id="shiptype" style="width: 350px; " required>
                <option value="" disabled selected>Please select a Shipment type</option>

                <option value="Initial">Initial</option>
                <option value="Re-Supply">Re-Supply</option>


            </select>
            <br />
            <br />

            <div class="form-group">
                <label>Number to ship (per group)<span style="color: red;"> *</span></label><br />
                <input type="text" name="shipNumber" asp-for="@Model.shipNumber" id="numberInput" style="width:500px;" class="CustomInput" pattern="\d*" title="Please enter only numbers" required />
                <button type="button" class="btn" id="editButton" onclick="toggleEditMode()">Edit</button>
            </div>


            <br />
            <br />
            <input type="submit" class="btn" value="Supply IP" /> &emsp;

        </form>
    </div>

