                </thead>
                <tbody>
                    @for (var i = 0; i < Model.DepotKits.Count(); i++)
                    {
                        <tr>
                            <td style="display: none;"><input type="hidden" value="@Model.DepotKits[i].KITKEY"></td>

                            <td>@Model.DepotKits[i].KitNumber</td>
