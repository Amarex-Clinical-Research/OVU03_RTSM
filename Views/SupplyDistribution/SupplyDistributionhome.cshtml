    <script>
        $(document).ready(function () {
            document.getElementById("numberInput").value = "";
            // Initialize Chosen for the #StudySelection element
            $("#StudySelection").chosen();
            $("#INVSelection").chosen();

            // Initialize Chosen for elements with the .shiptype class
            $(".shiptype").chosen();

            // Add an event handler for the select element with ID "shiptype"
            $("#shiptype").on("change", function () {
                const selectedValue = $(this).val();
                const numberInput = document.getElementById("numberInput");

                if (selectedValue === "Initial") {
                    numberInput.value = 16;
                    numberInput.readOnly = true; // Corrected property name
                } else {
                    numberInput.value = "";
                    numberInput.readOnly = false; // Corrected property name
                }
            });
        });

        function toggleEditMode() {
            const numberInput = document.getElementById("numberInput");
            const editButton = document.getElementById("editButton");

            if (numberInput.readOnly) {
                numberInput.readOnly = false;
                /*editButton.innerText = "Save";*/
            } else {
                numberInput.readOnly = true;
                editButton.innerText = "Edit";
            }
        }



    </script>

