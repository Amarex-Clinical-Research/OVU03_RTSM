    <div style="display: flex; justify-content: space-between; align-items: center; ">
        <h2 style="margin: 0;">Screen Certification</h2>
        <div style="text-align: right;">
            <img src="~/images/AMX_PRODUCTS_WEBVIEW_RTSM_by Am_gray red.png" style="max-height: 100px; max-width: 200px; margin-bottom: 2px;" />
            <div style="text-align: left;">@TempData.Peek("StudyName")</div>
        </div>
    </div>
    <hr style="width:100%" />
    <br />
    <div>
        <div class="form-group">
            <label>Site ID:</label><br />
            <input asp-for="@Model.SITEID" name="Site" class="CustomInput" readonly />
        </div>
        <div class="form-group">
            <label>Screen:</label><br />
            <input asp-for="@Model.SUBJID" name="Screen" class="CustomInput" readonly />
        </div>
        <div class="form-group">
            <label>Year of Birth:</label><br />
            <input asp-for="@Model.BRTHDTC" name="Birthyear" class="CustomInput" readonly />
        </div>
        <div class="form-group">
            <label>Sex:</label><br />
            <input asp-for="@Model.SEX" name="Gender" class="CustomInput" readonly />
        </div>
        <div class="form-group">
            <label>Informed consent date:</label><br />
            <input asp-for="@Model.ICDTC" name="InformedDate" class="CustomInput" readonly />
        </div>
        @*<div class="form-group">
            <label>Screen Date:</label><br />
            <input asp-for="@Model.SCRNDTC" name="ScreenDate" class="CustomInput" readonly />
        </div>*@
        <div class="form-group">
            <label>Status:</label><br />
            <input asp-for="@Model.STATUS_INFO" name="Status" class="CustomInput" readonly />
        </div>
        <div class="form-group">
            <label>Screen Fail Date:</label><br />
            <input asp-for="@Model.SFDATE" name="Status" class="CustomInput" readonly />
        </div>
        <br />
        <br />

    </div>
</div>


<input type="button" class="btn no-print" onClick="window.print()" value="Print" />
<input type="button" class="btn no-print" value="Back" onclick="window.location='@Url.Action("ScreenHome","Screen")'" style="background-color: #007bff; color: White;" />

<br />
<div style="position:absolute; bottom:0; width:100%">
    <hr style="width:100%" />
    <a style="font-size: 12px; color: gray;">Date Generated: @DateTime.Now.ToString("dd MMM yyyy")</a>
</div>


<script type="text/javascript">
    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        w = window.open();
        w.document.write(printContents);
        w.print();
        w.close();
    }
</script>

