                                            <input type="submit" class="btn" value="View" style="color:#e95420; background-color:transparent; border:none; align-content:center" />
                                            <input hidden readonly value="@Model.subjList[i].ROW_KEY" name="ROW_KEY" />
                                            <input hidden readonly value="@Model.subjList[i].SUBJID" name="SUBJID" />

