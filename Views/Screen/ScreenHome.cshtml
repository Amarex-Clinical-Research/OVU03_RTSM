            <input type="button" class="btn" value="Screen" style="background-color: #e95420; color: white; pointer-events: none; opacity: 0.6;" />
            @if (ViewBag.PIDet == "Screen Disabled" || ViewBag.SiteScreen == "Screen Disabled" || ViewBag.StopScreenAt == "Stop")
            {
                <div style="color: red; display: inline;">Stop Enrollment has been set. Contact the PM or CRA.</div>
            }

        }
        <br /><br />
        <div class="search-table-outter wrapper">
            <table class="table table-striped" id="aeTable">
                <thead>
                    <tr>
                        <th style="display: none;">ROW_KEY</th>
                        <th>Subject ID</th>
                        <th>Year Of Birth</th>
                        <th>Sex</th>
                        <th>Informed Consent Date</th>
                        @*<th>Screen Date</th>*@
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.subjList.Count(); i++)
                    {
                        <tr>
                            <td style="display: none;"><input type="hidden" value="@Model.subjList[i].ROW_KEY"></td>
                            <td>@Model.subjList[i].SUBJID</td>
                            <td>@Model.subjList[i].BRTHDTC</td>
                            <td>@Model.subjList[i].SEX</td>
                            <td>@Model.subjList[i].ICDTC</td>
                            @*<td>@Model.subjList[i].SCRNDTC</td>*@
