        @if (ViewBag.PIDet == "Screen Enabled" && ViewBag.SiteScreen == "Screen Enabled" && ViewBag.SITEID != "(All)" && ViewBag.StopScreenAt != "Stop")
        {

            <input type="button" class="btn" value="Screen Subject" style="background-color: #e95420; color: white;" onclick="window.location='@Url.Action("ScreenReg", "Screen")'" />

        }
        else
